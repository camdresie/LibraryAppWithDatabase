extends layout 

block content 
    h1 New Book
    form(action="/books", method="post")
    p
        label(for='title') Title
        input(name='title', type='text', placeholder='Title', id='title')
    p
        label(for='author') Author
        input(name='author', type='text', placeholder='Author', id='author')
    p
        label(for='genre') Genre
        input(name='genre', type='text', placeholder='Genre', id='genre')
    p
        label(for='year') Year
        input(name='year', type='text', placeholder='Year Published', id='year')
    p
        input(type='submit', value='Create New Book')
    p
        a.button(href='/books/') Cancel